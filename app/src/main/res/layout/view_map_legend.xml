<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="top|end"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/map_legend_background">

    <TextView
        android:text="@string/car"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:drawableRightCompat="@drawable/baseline_moving_blue_24" />
    <TextView
        android:text="@string/bicycle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:drawableRightCompat="@drawable/baseline_moving_white_24" />
    <TextView
        android:text="@string/foot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:drawableRightCompat="@drawable/baseline_moving_green_24" />
</LinearLayout>
