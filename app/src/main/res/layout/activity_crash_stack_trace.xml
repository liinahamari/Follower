<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/stacktrace_activity_background"
    tools:context=".screens.crash_screen.CrashStackTraceActivity">

    <LinearLayout
        android:layout_margin="8dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/stackTraceTitleTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:textColor="@color/stacktrace_activity_text_color"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/stacktraceTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/stacktrace_activity_text_color" />
    </LinearLayout>
</ScrollView>